<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".PokemonActivity">
    <Button
        android:id="@+id/catch_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="toggleCatch"
        android:text="@string/catch_button_name" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000">

        <ImageView
            android:id="@+id/pokemon_sprite"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@+id/pokemon_name" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/pokemon_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alex_brush"
                android:textStyle="bold"
                android:paddingTop="5sp"
                android:gravity="left"
                android:textSize="16sp"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon_name"
                android:gravity="left"
                android:paddingTop="10sp"
                android:textSize="18sp"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pokemon_type_1"
                android:gravity="left"
                android:visibility="gone"
                android:paddingTop="5sp"
                android:textSize="16sp"
                android:textColor="#fff"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/pokemon_type_2"
                android:visibility="gone"
                android:paddingTop="5sp"
                android:textSize="16sp"
                android:textColor="#fff"/>

        </LinearLayout>


    </RelativeLayout>






    <TextView
        android:id="@+id/pokemon_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxWidth="40sp"
        android:paddingTop="15sp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="#fff"/>



</LinearLayout>